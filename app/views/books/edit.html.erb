<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>Editing Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
<div class="form-group">
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, placeholder:"名前"%>
</div>
<div class="form-group">
  <label for="book-body">Opinion</label>
  <%= f.text_area :body, autofocus: true, placeholder:"名前"%>
</div>
<div class="form-group">
  <%= f.submit "Update Book", class: "btn btn-secondary" %>
</div>
<p>
  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>
</p>

<% end %>
</div>
</div>
</div>