<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>Editing Book</h2>

<%= form_with model: @book do |f| %>
<div class="form-group">
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, placeholder:"名前"%>
</div>
<div class="form-group">
  <label for="book-body">Opinion</label>
  <%= f.text_area :body, autofocus: true, placeholder:"名前"%>
</div>
<div class="form-group">
  <%= f.submit "Update Book", class: "btn btn-secondary" %>
</div>

<% end %>
</div>
</div>
</div>