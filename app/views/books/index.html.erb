  <body>
  <div>
   <div class="container">  <!-- この行を追加 -->
    <div class="row">      <!-- この行を追加 -->
     <div class="col-lg-4" style="background-color: orange;">
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
    <h3><%= @user.name %></h3>
     <table class="table table=striped">
      <tr>
        <th>name</th>
        <th></th>
      </tr>
       <th>introduction</th>
     </table>
     <%= link_to 'edit', edit_user_path(current_user.id), class: "btn btn-secondary" %>

<h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
   </div>
  <% end %>

    <div class="col-lg-8">  <!-- この行を追加 -->
     <h1>books</h1>
      <% @books.each do |book| %>
      <div>
       <p>Title：<%= book.title %></p>
       <p>Opinion：<%= book.body %></p>
       <p>ユーザーネーム：<%= book.user.name %></p>
      </div>
    </div>
   </div>
   </div>
   </div>
<% end %>
</body>