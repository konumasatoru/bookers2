<body>
  <div>
   <div class="container">
    <div class="row">
     <div class="col-md-3" style="background-color: white;">
     <script src="https://kit.fontawesome.com/c73d66f42c.js" crossorigin="anonymous"></script>
     <div>
  <%= flash[:notice] %>
     </div>
    <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
     <table class="table table=striped">
      <tr>
        <th>name</th>
        <th><h3><%= @user.name %></h3></th>
      </tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
     </table>
     <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
     <% end %>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
     <p>
     <%= f.submit "Create Book", class: "btn btn-success" %>
     </p>
  <% end %>
   </div>



    <div class="col-md-8 offset-md-1">
     <h1>Users</h1>
     <table class="table table-hover table-inverse">
     <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
       <td><%= image_tag user.get_profile_image(100,100) %></td>
       <td><%= user.name %></td>
       <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
    </div>
   </div>
   </div>
   </div>
</body>